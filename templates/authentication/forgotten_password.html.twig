{% extends 'index.html.twig' %}

{% block content %}

<div class="container mt-5">
    {% if session.error is not null %}
    <div class="alert alert-danger" role="alert">
        {{session.error}}
    </div>
    {% endif %}
    {% if session.success is not null %}
    <div class="alert alert-success" role="alert">
        {{session.success}}
    </div>
    {% endif %}

    <div class="row justify-content-center">
        <div class="col-md-5">
            <h2 class="mb-4">Password Dimenticata</h2>

            <form action="/forgot_password" method="post">
                <div class="form-group my-2">
                    <label for="email" class="fw-bold mb-1">Email:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>

                <p class="text-muted">Attenzione: la richiesta del reset password dovr√† essere approvata da un'amministratore.</p>

                <div class="align-middle">
                    <div class="float-end">
                        <button type="submit" class="btn btn-primary">Invia</button>
                    </div>
                    <div>
                        <a href="/login" class="text-muted">Torna al login</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{% endblock content %}
