{# <div id="calendar"></div>
<script src="script.js"></script> #}

    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
    <script>

    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
            // plugins: [ "interactionPlugin" ],
            locale: "it",
            themeSystem: 'bootstrap5',
            initialView: 'dayGridMonth',

            dateClick: function(info) {
                alert('Clicked on: ' + info.dateStr);
                alert('Coordinates: ' + info.jsEvent.pageX + ',' + info.jsEvent.pageY);
                alert('Current view: ' + info.view.type);
                // change the day's background color just for fun
                info.dayEl.style.backgroundColor = 'red';
            },
            eventClick: function(info) {
                // Function to execute when an event is clicked
                alert('Clicked on: ' + info.event.title);
            },
            events: [
                {
                    title: 'Event 1',
                    start: '2024-01-23'
                },
                {
                    title: 'Event 0',
                    start: '2024-01-23'
                },
                {
                    title: 'Event 3',
                    start: '2024-01-23'
                },
            ],
            datesSet: function(arg) {
                alert('The new date range is: ' + arg.start + ' to ' + arg.end);
            },
            aspectRatio: 1.5,
            handleWindowResize: true,
        });
        calendar.render();
    });

    </script>

<div class="container">
    <div class="row">
        <div class="col-lg-8 mb-3"> <!-- Use col-lg-8 for larger screens -->
            <div id='calendar'></div>
        </div>
        <div class="col-lg-4 mb-3"> <!-- Use col-lg-4 for larger screens -->
            {# <div class="p-4 bg-light"> #}
            <div style="background-color:#EEEEEE; padding: 4px; border-radius: 10px">
                <x-forms.prenotazione></x-forms.prenotazione>
            </div>
        </div>
    </div>
</div>
{% endblock content %}
