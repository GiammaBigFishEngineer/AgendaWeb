{% extends 'index.html.twig' %}

{% block content %}

<div class="alert alert-primary mt-3" role="alert">
  You are now logged in!
</div>

<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
<script>

