<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
        <!-- Bootstrap css/icons -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css"> 

        <!-- Bootstrap scripts -->
        <script src="https://unpkg.com/@popperjs/core@2" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

        <!-- Axios.js -->
        <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

        <!-- Custom <select> -->
        <link rel="stylesheet" href="{{ app.request.schemeAndHttpHost ~ app.request.baseUrl ~ "/templates/css/select/style.css" }}"/>
        
        <!-- Quill Snow -->
        <link href="https://cdn.jsdelivr.net/npm/quill@1.3.7/dist/quill.snow.min.css" rel="stylesheet"/>

        <!-- Flatpickr -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr@4.6.13/dist/plugins/monthSelect/style.css">

        <style>
            .toast {
            background-color: rgb(255, 255, 255);
            color: #000000;
            }
 
            .color-dot {
                display: inline-block;
                width: 10px;
                height: 10px; /* Adjust the size as needed */
                border-radius: 50%;
                margin-right: 5px; /* Adjust the spacing as needed */
            }

            /* Chrome, Safari, Edge, Opera */
            input::-webkit-outer-spin-button,
            input::-webkit-inner-spin-button {
            -webkit-appearance: none;
            margin: 0;
            }

            /* Firefox */
            input[type=number] {
                -moz-appearance: textfield;
            }

            ::-webkit-scrollbar {
                width: 12px;
            }

            ::-webkit-scrollbar-thumb {
                background-color: #004CC5;
            }

            * {
                scrollbar-width: thick;
                scrollbar-color: #004CC5;
            }

            .fc-event {
                border-width: 1px;
                border-style: solid;
            }

            .fc ::-webkit-scrollbar {
                width: auto;
            }

            .fc ::-webkit-scrollbar-thumb {
                background-color: inherit;
            }

            /* .fc-scroller.fc-scroller-liquid {
                overflow-y: hidden !important;
            } */

            /* Workaround for fc scrollbar hiding numbers on the right */
            .fc .fc-daygrid-day-top {
                flex-direction: row;
            }
 
            .fc-day-grid-container.fc-scroller {
                height: auto!important;
                overflow-y: auto;
            }

            .draggable-modal {
                position: absolute;
            }

            .draggable-modal .modal-header {
                cursor: move;
            }

            .modal-backdrop {
                opacity: 0.2 !important;
            }
        </style>
    </head>

    <body>
        <x-navbar></x-navbar>

        <div class="d-flex align-items-stretch" style="min-height: 95vh">
            <div class="main-content container-fluid">
                {% block content %}

                {% endblock %}
            </div>
        </div>

        <x-footer></x-footer>
    </body>

</html>